<!--
  Informações sobre a tag <media />:
  filename.: nome do arquivo de mídia a ser exibido. Utilizar caminho
             relativo ao diretório deste XML.
  type.....: "image" ou "flash".
  interval.: tempo de exibição da mídia em segundos.
  href.....: url que será aberta se o usuário clicar na media.
-->

<advertising>
  <media filename="propaganda1.png" type="image" interval="3" href="http://www.imanager.com.br" />
  <media filename="propaganda2.png" type="image" interval="3" href="http://www.imanager.com.br" />
  <media filename="propaganda3.png" type="image" interval="3" href="http://www.imanager.com.br" />
  <media filename="teaser_04.swf"   type="flash" interval="30" href="http://www.imanager.com.br" />
</advertising>
